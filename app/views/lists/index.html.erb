

<div class="container-index" id="container-index">
    <div class="banner-index">
              <%= image_tag "main-image.jpg", alt: "rails-watch-list", class: "image-banner" %>
          <h3>Save any kind of movies</h3>
    </div>
      <div class="container-lists">
          <h4 class="name-table-list">My list</h4>
          <button type="button" href="http://localhost:3000/lists/new" class="btn btn-primary" id="btn-create-list"><a href="http://localhost:3000/lists/new" style="color:inherit">CrÃ©er une liste</a></button>
          <div class="box-cards">
            <% @lists.each do |list| %>
             <div class="card-element">

              <a href="http://localhost:3000/lists/<%= list.id %>">
                <h4 class="name-list"><%= list.name %></h4>
                <% if list.avatar.attached? %>
                <%= cl_image_tag list.avatar.key, height: 150, width: 150, crop: :fill %>
                  <%end %>

               </a>
             </div>
             <% end %>
          </div>
      </div>
</div>







